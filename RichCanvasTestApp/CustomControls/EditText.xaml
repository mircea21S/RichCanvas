<Window x:Class="RichCanvasTestApp.CustomControls.EditText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:RichCanvasTestApp.ViewModels"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        d:DataContext="{d:DesignInstance Type=viewmodels:TextVisual}"
        mc:Ignorable="d"
        Title="EditText"
        Height="200"
        Width="200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox MinHeight="30"
                     MinWidth="100"
                     Text="{Binding Text, Mode=TwoWay}"
                     md:HintAssist.Hint="Text"
                     md:HintAssist.IsFloating="True"
                     Margin="6,0,6,0" />
            <Button Content="Ok"
                    Width="60"
                    Click="OnOkClicked"
                    Margin="0,4,0,0" />
        </StackPanel>
    </Grid>
</Window>
